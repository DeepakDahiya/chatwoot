# give ds-support user permission to start/stop/restart ds-support systemd service

%ds-support ALL=NOPASSWD: /bin/systemctl start chatwoot.target
%ds-support ALL=NOPASSWD: /bin/systemctl stop chatwoot.target
%ds-support ALL=NOPASSWD: /bin/systemctl restart chatwoot.target
%ds-support ALL=NOPASSWD: /usr/local/bin/cwctl
